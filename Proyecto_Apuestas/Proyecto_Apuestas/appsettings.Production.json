{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Proyecto_Apuestas": "Information"
    },
    "File": {
      "Enabled": true,
      "Path": "/var/log/bet506/app.log"
    },
    "CloudWatch": {
      "Enabled": true,
      "LogGroup": "/aws/webapp/bet506-production"
    }
  },
  "Email": {
    "BaseUrl": "https://bet506.com",
    "SendGrid": {
      "ApiKey": "SG.PRODUCTION_API_KEY_HERE"
    }
  },
  "Application": {
    "Environment": "Production",
    "EnableDetailedErrors": false,
    "EnableSwagger": false,
    "Betting": {
      "MinimumBet": 1000,
      "MaximumBet": 1000000,
      "DailyBetLimit": 5000000
    }
  },
  "Security": {
    "JwtSecret": "PRODUCTION_JWT_SECRET_256BIT_ULTRA_SECURE_CHANGE_THIS",
    "EncryptionKey": "PRODUCTION_ENCRYPTION_KEY_256BIT_ULTRA_SECURE_CHANGE_THIS",
    "MaxLoginAttempts": 3,
    "LockoutMinutes": 60,
    "RequireEmailConfirmation": true,
    "RequireTwoFactor": true
  },
  "Payment": {
    "Stripe": {
      "PublicKey": "pk_live_PRODUCTION_KEY",
      "SecretKey": "sk_live_PRODUCTION_KEY",
      "WebhookSecret": "whsec_PRODUCTION_WEBHOOK"
    }
  },
  "Features": {
    "LiveBetting": true,
    "CashOut": false,
    "VirtualSports": false,
    "Promotions": true,
    "ReferralProgram": true,
    "MobileApp": false,
    "ApiV2": false
  },
  "Cache": {
    "Enabled": true,
    "Provider": "Redis",
    "Redis": {
      "ConnectionString": "REDIS_CONNECTION_STRING_HERE"
    }
  },

  "AWS": {
    "Region": "us-east-2",
    "AccessKey": "PRODUCTION_AWS_ACCESS_KEY",
    "SecretKey": "PRODUCTION_AWS_SECRET_KEY",
    "S3": {
      "BucketName": "bet506-production-assets",
      "BaseUrl": "https://assets.bet506.com"
    },
    "CloudFront": {
      "Url": "https://cdn.bet506.com",
      "Enabled": true
    }
  },
  "SEO": {
    "DefaultTitle": "Bet506 - Las Mejores Apuestas Deportivas en Costa Rica",
    "TwitterHandle": "@bet506oficial",
    "FacebookAppId": "FACEBOOK_APP_ID_HERE"
  }
}