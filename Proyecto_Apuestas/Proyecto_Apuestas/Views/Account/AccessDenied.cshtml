@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card">
                <div class="card-body p-5">
                    <i class="fa-solid fa-shield-halved text-danger" style="font-size: 4rem;"></i>
                    <h2 class="mt-3 text-danger">Acceso Denegado</h2>
                    <p class="text-muted mt-3">
                        No tienes permisos para acceder a esta página.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            <i class="fa-solid fa-home me-1"></i>Ir al Inicio
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-sign-in-alt me-1"></i>Iniciar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>