<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_Apuestas</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="navbar-left">
            <span class="logo">BET<span class="green">APP</span></span>
            <ul class="nav-links">
                <li><a href="#" class="active"><i class="ri-football-line"></i> Sports</a></li>
                <li><a href="#"><i class="ri-earth-line"></i> Leagues</a></li>
                <li><a href="#"><i class="ri-live-line"></i> Live</a></li>
                <li><a href="#"><i class="ri-book-2-line"></i> About</a></li>
                <li><a href="#"><i class="ri-mail-line"></i> Contact</a></li>
                <li><a class="promotions" href="#"><i class="ri-star-smile-line"></i> Promotions</a></li>
            </ul>

        </div>
        <div class="navbar-right">
            <select class="lang-select">
                <option value="en">EN</option>
                <option value="es">ES</option>
            </select>
            <button class="btn-login" onclick="abrirLogin()">Login</button>
            <button class="btn-signup">Sign up</button>
        </div>
    </nav>
    <div class="navbar-underline"></div>

    <!-- MAIN -->
    <main class="container-fluid mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="text-center text-white py-4 mt-5" style="background-color: #14162b;">
        &copy; 2025 - Proyecto_Apuestas -
        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-light">Privacidad</a>
    </footer>

    <!-- meterlos en el cdn -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
