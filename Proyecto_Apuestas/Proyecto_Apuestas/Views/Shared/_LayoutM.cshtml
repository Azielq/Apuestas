<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bet506 | Apuestas Deportivas Costa Rica</title>

    @await Html.PartialAsync("_StylesCDN")
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
</head>
<body class="bg-dark text-white">

    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="navbar-left">
            <span class="logo">BET<span class="green">APP</span></span>
            <ul class="nav-links">
                <li><a href="/" class="active"><i class="ri-football-line"></i> Sports</a></li>
                <li><a href="#"><i class="ri-earth-line"></i> Leagues</a></li>
                <li><a href="/live"><i class="ri-live-line"></i> Live</a></li>
                <li><a href="/about"><i class="ri-book-2-line"></i> About</a></li>
                <li><a href="/contact"><i class="ri-mail-line"></i> Contact</a></li>
                <li><a class="promotions" href="/promotions"><i class="ri-star-smile-line"></i> Promotions</a></li>
            </ul>
        </div>

        <div class="navbar-right">
            <select class="lang-select">
                <option value="en">EN</option>
                <option value="es">ES</option>
            </select>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                        @User.Identity.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                        <li><a class="dropdown-item" href="/account/profile"><i class="bi bi-person me-2"></i>Perfil</a></li>
                        <li><a class="dropdown-item" href="/account/bets"><i class="bi bi-journal-check me-2"></i>Mis apuestas</a></li>
                        <li><a class="dropdown-item" href="/account/transactions"><i class="bi bi-wallet2 me-2"></i>Transacciones</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/account/logout"><i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión</a></li>
                    </ul>
                </div>
            }
            else
            {
                <button class="btn-login" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
                <a href="/Account/Register" class="btn-signup">Sign up</a>
            }
        </div>
    </nav>
    <div class="navbar-underline"></div>

    <!-- LOGIN MODAL -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Iniciar sesión</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form id="loginForm" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="Email" class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control" id="Email" name="Email" placeholder="correo@ejemplo.com" required />
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Mínimo 6 caracteres" required minlength="6" />
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
                            <label class="form-check-label" for="RememberMe">Recordarme</label>
                        </div>
                        <div id="loginError" class="alert alert-danger visually-hidden" role="alert"></div>
                        <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- MAIN -->
    <main class="container-fluid mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="text-center text-white py-4 mt-5" style="background-color: #14162b;">
        &copy; @DateTime.Now.Year - Bet506 -
        <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-light">Privacidad</a>
    </footer>

    <!-- SCRIPTS -->
    @await Html.PartialAsync("_ScriptsCDN")
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function abrirLogin() {
            var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
            loginModal.show();
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
