@{
    ViewData["Title"] = ViewBag.FeatureName ?? "Función en Desarrollo";
    var featureName = ViewBag.FeatureName ?? "Esta función";
    var expectedDate = ViewBag.ExpectedDate ?? "las próximas actualizaciones";
    var description = ViewBag.Description ?? "Estamos trabajando arduamente para traerte nuevas funcionalidades.";
    var icon = ViewBag.Icon ?? "bi-tools";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card bg-dark text-white border-warning shadow-lg">
                <div class="card-body text-center py-5">
                    <!-- Icono principal -->
                    <div class="mb-4">
                        <i class="@icon display-1 text-warning"></i>
                    </div>
                    
                    <!-- Título -->
                    <h1 class="card-title mb-4 text-warning">
                        @featureName
                    </h1>
                    
                    <!-- Subtítulo -->
                    <h5 class="text-muted mb-4">Próximamente disponible</h5>
                    
                    <!-- Descripción -->
                    <p class="lead mb-4">
                        @description
                    </p>
                    
                    <!-- Información adicional -->
                    <div class="alert alert-warning bg-transparent border-warning text-warning" role="alert">
                        <i class="bi bi-calendar-check me-2"></i>
                        <strong>Fecha estimada:</strong> @expectedDate
                    </div>
                    
                    <!-- Features que vendrán -->
                    @if (ViewBag.Features != null)
                    {
                        <div class="mt-4">
                            <h6 class="text-light mb-3">¿Qué puedes esperar?</h6>
                            <div class="row">
                                @foreach (string feature in ViewBag.Features)
                                {
                                    <div class="col-md-6 mb-2">
                                        <div class="d-flex align-items-center text-start">
                                            <i class="bi bi-check-circle text-success me-2"></i>
                                            <span class="small">@feature</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    
                    <!-- Call to action -->
                    <div class="mt-5">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-3">
                            <i class="bi bi-house me-2"></i>Volver al Inicio
                        </a>
                        
                        @if (ViewBag.ShowNewsletterSignup == true)
                        {
                            <button class="btn btn-outline-warning btn-lg" data-bs-toggle="modal" data-bs-target="#notifyModal">
                                <i class="bi bi-bell me-2"></i>Notificarme
                            </button>
                        }
                    </div>
                    
                    <!-- Redes sociales -->
                    <div class="mt-4 pt-4 border-top border-secondary">
                        <p class="text-muted mb-3">Síguenos para estar al día con las novedades:</p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="#" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-facebook"></i>
                            </a>
                            <a href="#" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-twitter-x"></i>
                            </a>
                            <a href="#" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-instagram"></i>
                            </a>
                            <a href="#" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-youtube"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para notificaciones -->
@if (ViewBag.ShowNewsletterSignup == true)
{
    <div class="modal fade" id="notifyModal" tabindex="-1" aria-labelledby="notifyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header border-bottom border-warning">
                    <h5 class="modal-title" id="notifyModalLabel">
                        <i class="bi bi-bell text-warning me-2"></i>Recibir Notificaciones
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">Te notificaremos cuando @(featureName.ToLower()) esté disponible.</p>
                    
                    <form id="notifyForm">
                        <div class="mb-3">
                            <label for="notifyEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="notifyEmail" placeholder="tu@email.com" required>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="acceptMarketing" required>
                            <label class="form-check-label" for="acceptMarketing">
                                Acepto recibir actualizaciones por email
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-envelope me-2"></i>Suscribirme
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const notifyForm = document.getElementById('notifyForm');
            if (notifyForm) {
                notifyForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Simula envío exitoso
                    Swal.fire({
                        icon: 'success',
                        title: '¡Suscripción exitosa!',
                        text: 'Te notificaremos cuando la función esté disponible.',
                        confirmButtonColor: '#5C4B8B'
                    });
                    
                    // Cierra modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('notifyModal'));
                    modal.hide();
                });
            }
        });
    </script>
}