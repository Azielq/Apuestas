@{
    ViewData["Title"] = "Contacto - Bet506 | Atención al cliente 24/7";
}

<!-- Contact Hero Section -->
<section class="info-hero-section position-relative overflow-hidden py-5 bg-dark-2">
    <div class="container py-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10" data-aos="fade-up">
                <h1 class="display-4 fw-bold mb-4">Contáctanos</h1>
                <p class="lead mb-4">Estamos aquí para ayudarte. Comunícate con nuestro equipo de atención al cliente</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Information Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-8" data-aos="fade-right">
                <div class="card bg-dark-2 border-primary h-100">
                    <div class="card-body p-4">
                        <h2 class="fw-bold mb-4">Envíanos un mensaje</h2>
                        
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                        
                        <form method="post" asp-action="Contact" asp-controller="Home">
                            @Html.AntiForgeryToken()
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Nombre Completo</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Tu nombre completo" required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Correo Electrónico</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="tu@email.com" required>
                                </div>
                                
                                <div class="col-12">
                                    <label for="message" class="form-label">Mensaje</label>
                                    <textarea class="form-control" id="message" name="message" rows="6" placeholder="Describe tu consulta o problema..." required></textarea>
                                </div>
                                
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="bi bi-send me-2"></i>Enviar Mensaje
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4" data-aos="fade-left">
                <div class="sticky-top" style="top: 2rem;">
                    <h3 class="fw-bold mb-4">Información de Contacto</h3>
                    
                    <div class="card bg-dark-2 border-primary mb-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-clock fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Horario de Atención</h5>
                                    <p class="text-white-50 mb-0">24 horas, 7 días a la semana</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-envelope fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Correo Electrónico</h5>
                                    <p class="text-white-50 mb-0">soporte@bet506.com</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-telephone fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Teléfono</h5>
                                    <p class="text-white-50 mb-0">+506 2222-5066</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-chat-dots fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="mb-1">Chat en Vivo</h5>
                                    <p class="text-white-50 mb-0">Disponible en la plataforma</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card bg-dark-2 border-primary">
                        <div class="card-body">
                            <h5 class="mb-3">Síguenos en redes sociales</h5>
                            <div class="d-flex gap-3">
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-facebook"></i>
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-twitter"></i>
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-instagram"></i>
                                </a>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-whatsapp"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="py-5 bg-dark-2">
    <div class="container">
        <h2 class="fw-bold mb-5 text-center" data-aos="fade-up">Preguntas Frecuentes</h2>
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item bg-dark border-primary mb-3">
                        <h3 class="accordion-header">
                            <button class="accordion-button bg-dark text-white collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                ¿Cómo puedo crear una cuenta?
                            </button>
                        </h3>
                        <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body bg-dark text-white-50">
                                Para crear una cuenta, haz clic en "Regístrate" en la parte superior de la página y completa el formulario con tu información personal. El proceso toma menos de 5 minutos.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item bg-dark border-primary mb-3">
                        <h3 class="accordion-header">
                            <button class="accordion-button bg-dark text-white collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                ¿Qué métodos de pago aceptan?
                            </button>
                        </h3>
                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body bg-dark text-white-50">
                                Aceptamos tarjetas de crédito y débito, transferencias bancarias, SINPE Móvil y otros métodos de pago populares en Costa Rica.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item bg-dark border-primary mb-3">
                        <h3 class="accordion-header">
                            <button class="accordion-button bg-dark text-white collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                ¿Cuánto tiempo toman los retiros?
                            </button>
                        </h3>
                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body bg-dark text-white-50">
                                Los retiros se procesan dentro de 24-48 horas hábiles, dependiendo del método de pago seleccionado.
                            </div>
                        </div>
                    </div>
                    
                    <div class="accordion-item bg-dark border-primary mb-3">
                        <h3 class="accordion-header">
                            <button class="accordion-button bg-dark text-white collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                ¿Es seguro apostar en Bet506?
                            </button>
                        </h3>
                        <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body bg-dark text-white-50">
                                Sí, Bet506 cuenta con licencia oficial y utiliza tecnología de encriptación de última generación para proteger tu información y transacciones.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-primary">
    <div class="container">
        <div class="row align-items-center text-center text-lg-start">
            <div class="col-lg-8 mb-4 mb-lg-0" data-aos="fade-right">
                <h2 class="fw-bold mb-3 text-white">¿Necesitas ayuda inmediata?</h2>
                <p class="lead mb-0 text-white opacity-75">Nuestro equipo de soporte está disponible 24/7 para ayudarte con cualquier consulta.</p>
            </div>
            <div class="col-lg-4 text-lg-end" data-aos="fade-left">
                <a href="#" class="btn btn-dark btn-lg px-4 me-2">Chat en Vivo</a>
                <a href="tel:+50622225066" class="btn btn-outline-light btn-lg px-4">Llamar Ahora</a>
            </div>
        </div>
    </div>
</section>