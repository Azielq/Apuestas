@using Proyecto_Apuestas.ViewModels.API
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<link href="../wwwroot/css/layout.css" rel="stylesheet" />

<section class="promo-section pt-0">
    <div class="container-fluid px-0">
        <div class="row g-0 align-items-stretch flyer-row">

            <!-- Texto a la izquierda -->
            <div class="col-md-6 text-section d-flex align-items-center">
                <div class="promo-text w-100 ps-5">
                    <h6>SIGN UP & GET REWARD</h6>
                    <h1>
                        <span class="text-white-bold">UP TO</span>
                        <span class="text-price">$20,000</span>
                    </h1>
                </div>
            </div>

            <!-- Imagen a la derecha -->
            <div class="col-md-6 image-section d-flex align-items-center justify-content-center">
                <img src="/images/indexAp.png" alt="Club" class="img-fluid " />
            </div>

        </div>
    </div>
</section>


<section>
    <div class="row mb-5">
        <div class="col-12">
            <div id="promotionalCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
                <!-- Indicadores  -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#promotionalCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#promotionalCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#promotionalCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#promotionalCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>

                <!-- Carousel Inner -->
                <div class="carousel-inner rounded-3 shadow-lg">
                    <!--  Bienvenida -->
                    <div class="carousel-item active">
                        <div class="d-flex align-items-center justify-content-center bg-gradient-primary text-white position-relative" style="height: 400px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <div class="carousel-overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.3);"></div>
                            <div class="text-center position-relative z-1">
                                <h1 class="display-4 fw-bold mb-3">¡Bienvenido a Bet506!</h1>
                                <p class="lead mb-4">La mejor plataforma de apuestas deportivas de Costa Rica</p>
                                <div class="d-flex gap-3 justify-content-center">
                                    <a href="@Url.Action("Index", "OddsApi")" class="btn btn-outline-light btn-lg px-4">
                                        <i class="bi bi-trophy me-2"></i>Ver Deportes
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bono de Bienvenida -->
                    <div class="carousel-item">
                        <div class="d-flex align-items-center justify-content-center bg-gradient-success text-white position-relative" style="height: 400px; background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                            <div class="carousel-overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.3);"></div>
                            <div class="text-center position-relative z-1">
                                <h1 class="display-3 fw-bold mb-3">100% BONO</h1>
                                <h2 class="h1 mb-3">¡Hasta ₡50.000!</h2>
                                <p class="lead mb-4">En tu primer depósito. ¡Duplica tus posibilidades de ganar!</p>
                                <div class="d-flex gap-3 justify-content-center">
                                    <a href="@Url.Action("Promotions", "Home")" class="btn btn-outline-light btn-lg px-4">
                                        <i class="bi bi-trophy me-2"></i>Ver Promociones
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--  Apuestas en Vivo -->
                    <div class="carousel-item">
                        <div class="d-flex align-items-center justify-content-center bg-gradient-danger text-white position-relative" style="height: 400px; background: linear-gradient(135deg, #ff6b6b 0%, #ffa726 100%);">
                            <div class="carousel-overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.3);"></div>
                            <div class="text-center position-relative z-1">
                                <h1 class="display-4 fw-bold mb-3"><i class="bi bi-broadcast text-danger"></i> APUESTAS EN VIVO</h1>
                                <p class="lead mb-4">Siente la emoción del momento. Apuesta mientras el juego está en desarrollo</p>
                                <div class="row justify-content-center mb-4">
                                    <div class="col-auto">
                                        <div class="badge bg-white text-dark fs-6 px-3 py-2 me-2">⚽ Fútbol</div>
                                        <div class="badge bg-white text-dark fs-6 px-3 py-2 me-2">🏀 Basketball</div>
                                        <div class="badge bg-white text-dark fs-6 px-3 py-2">🎾 Tenis</div>
                                    </div>
                                </div>
                                <a href="@Url.Action("Index", "LiveBetting")" class="btn btn-light btn-lg px-4">
                                    <i class="bi bi-lightning-charge me-2"></i>Apostar En Vivo
                                </a>
                            </div>
                        </div>
                    </div>

                    <!--  App Móvil -->
                    <div class="carousel-item">
                        <div class="d-flex align-items-center justify-content-center bg-gradient-info text-white position-relative" style="height: 400px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <div class="carousel-overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.3);"></div>
                            <div class="text-center position-relative z-1">
                                <h1 class="display-4 fw-bold mb-3"><i class="bi bi-phone me-3"></i>DESCARGA NUESTRA APP</h1>
                                <p class="lead mb-4">Apuesta desde cualquier lugar. Disponible para iOS y Android</p>
                                <div class="d-flex gap-3 justify-content-center">
                                    <a href="@Url.Action("AppStore", "Home")" class="btn btn-dark btn-lg px-4">
                                        <i class="bi bi-apple me-2"></i>App Store
                                    </a>
                                    <a href="@Url.Action("PlayStore", "Home")" class="btn btn-success btn-lg px-4">
                                        <i class="bi bi-google-play me-2"></i>Google Play
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Controles de carousel -->
                <button class="carousel-control-prev" type="button" data-bs-target="#promotionalCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#promotionalCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        </div>
</section>
