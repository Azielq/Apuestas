<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Buscar palabra favorita:" FontAttributes="Bold"/>
            <SearchBar x:Name="searchBar" Placeholder="Ej: chocolate, azul..." TextChanged="OnSearchBarTextChanged"/>

            <Label Text="Color preferido:" FontAttributes="Bold"/>
            <HorizontalStackLayout>
                <CheckBox x:Name="chk_colorazul"/>
                <Label Text="Azul"/>
                <CheckBox x:Name="chk_colorrojo"/>
                <Label Text="Rojo"/>
            </HorizontalStackLayout>

            <Label Text="Sabor preferido:" FontAttributes="Bold"/>
            <HorizontalStackLayout>
                <RadioButton x:Name="Rb_cafe" GroupName="sabores"/>
                <Label Text="Café"/>
                <RadioButton x:Name="Rb_chocolate" GroupName="sabores"/>
                <Label Text="Chocolate"/>
            </HorizontalStackLayout>

            <Label Text="Galleta preferida:" FontAttributes="Bold"/>
            <HorizontalStackLayout>
                <RadioButton x:Name="Rb_GalletaSalada" GroupName="galleta"/>
                <Label Text="Salada"/>
                <RadioButton x:Name="Rb_GalletaDulce" GroupName="galleta"/>
                <Label Text="Dulce"/>
            </HorizontalStackLayout>

            <Label x:Name="Indica" Text="Sin Mensaje" FontSize="16" TextColor="Gray" Margin="0,10"/>
            <Button x:Name="Activar" Text="Activar" Clicked="Activar_Clicked"/>

            <Label x:Name="CounterLabel" FontAttributes="Italic" Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
